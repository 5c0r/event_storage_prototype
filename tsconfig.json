{
    "compilerOptions": {
        "target": "es2016",
        "lib": [
            "es6",
            "dom"
        ],
        "types": [
            "mocha",
            "reflect-metadata"
        ],
        "sourceMap": false,
        "outDir": "compile_output",
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": true,
        "removeComments": true
    }
}