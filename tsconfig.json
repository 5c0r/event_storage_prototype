{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "es7",
            "es6",
            "dom"
        ],
        "types": [
            "jest",
            "reflect-metadata",
            "mongoose",
            "rxjs",
            "rxjs-compat"
        ],
        "sourceMap": true,
        "outDir": "./dist/",
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": false,
        "removeComments": false,
        "allowUnreachableCode": false,
        "declaration": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}