{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "es7",
            "es6",
            "dom"
        ],
        "types": [
            "reflect-metadata",
            "mongoose"
        ],
        "sourceMap": true,
        "outDir": "./dist/",
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": false,
        "removeComments": true,
        "allowUnreachableCode": false,
        "declaration": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}