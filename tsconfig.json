{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "es7",
            "es6",
            "dom"
        ],
        "types": [
            "karma",
            "mocha",
            "chai",
            "reflect-metadata",
            "mongoose"
        ],
        "sourceMap": false,
        "outDir": "compile_output",
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": false,
        "removeComments": true,
        "allowUnreachableCode": false
    },
    "exclude": [
        "node_modules"
    ]
}